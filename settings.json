{
  // ********************************* VSCode设置 *********************************

  // ## 配置
  "security.workspace.trust.enabled": false,

  // ## Workbench
  "glassit.alpha": 250,
  "workbench.colorTheme": "Flatland Monokai",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.colorCustomizations": {
    "editor.foreground": "#F5DEB3",
    "peekViewEditor.background": "#252620"
  },

  // ## Editor
  "editor.renderWhitespace": "all",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": false,
  "editor.minimap.renderCharacters": false,
  "editor.lineHeight": 20,
  "editor.wordWrap": "on",
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.snippetSuggestions": "top",
  "edityyor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "variable",
        "settings": {
          "foreground": "#60D78B"
        }
      },
      {
        "scope": [
          "comment",
          "comment.block.documentation",
          "comment.block.documentation.js",
          "comment.line.double-slash.js",
          "storage.type.class.jsdoc",
          "entity.name.type.instance.jsdoc",
          "variable.other.jsdoc",
          "punctuation.definition.comment",
          "punctuation.definition.comment.begin.documentation",
          "punctuation.definition.comment.end.documentation"
        ],
        "settings": {
          "fontStyle": "italic",
          "foreground": "#666666"
        }
      }
    ]
  },

  // ## Terminal
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.lineHeight": 1.2,

  // ## Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ## Files
  // "files.trimTrailingWhitespace": true,
  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,
  "C_Cpp.intelliSenseCachePath": "D:/Cache/vscode",
  "C_Cpp.intelliSenseCacheSize": 1024,

  // ## Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "build/": true,
    "temp/": true,
    "library/": true,
    "**/*.anim": true
  },

  // ## Disable Autoupdate
  "update.enableWindowsBackgroundUpdates": false,
  "update.mode": "none",

  // ## Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.meta": true,
    "library/": true,
    "local/": true,
    "temp/": true
  },

  // 字体
  "editor.fontFamily": "Source Code Pro,Sarasa Mono SC, Consolas, 'Courier New', monospace", //后边的引号中写上要设置的字体类型，个人比较喜欢Fira Code
  "editor.fontLigatures": true, //这个控制是否启用字体连字，true启用，false不启用，这里选择启用
  "editor.fontSize": 14, //设置字体大小，这个不多说都明白
  "editor.fontWeight": "normal",
  "files.eol": "\n", //这个设置字体粗细，可选normal,bold,"100"~"900"等，选择合适的就行

  // ********************************* 插件设置 *********************************

  // ## Extensions
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,

  // ## VSIcons
  "vsicons.dontShowNewVersionMessage": true,

  // ## Markdownlint
  "markdown.preview.fontFamily": "Consolas, Dengxian,Consolas, 'Courier New', monospace",
  "pasteImage.showFilePathConfirmInputBox": true,

  // ## Color Regions
  "coloredRegions.namedColors": {
    "m": "rgba(57, 43, 80, 0.5)",
    "v": "rgba(32, 60, 44, 0.5)",
    "c": "rgba(29, 54, 88, 0.5)"
  },

  // ## Paste Image
  "pasteImage.path": "${projectRoot}/source/images",
  "pasteImage.basePath": "${projectRoot}/source",
  "pasteImage.forceUnixStyleSeparator": true,
  "pasteImage.prefix": "/",

  // ## CodeRunner
  "code-runner.fileDirectoryAsCwd": true,
  "code-runner.executorMap": {
    "csharp": "cd $dir && C:\\Windows\\Microsoft.NET\\Framework64\\v4.0.30319\\csc.exe $fileName && $dir$fileNameWithoutExt",
    "java": "cd $dir && javac -encoding utf-8 $fileName && java $fileNameWithoutExt",
    "python": "cd $dir && set PYTHONIOENCODING=utf8 && python $fileName"
  },
  "code-runner.runInTerminal": true,

  // ## Formatter
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // ## GLSL Linter
  "glsl-linter.validatorPath": "D:/Opengl/glslang/bin/glslangValidator.exe",
  "glsl-linter.fileExtensions": {
    ".fs.glsl": "frag",
    ".vs.glsl": "vert",
    ".tes.glsl": "tese",
    ".tcs.glsl": "tesc",
    ".gs.glsl": "geom"
  },

  // ********************************* 开发环境 *********************************

  // ## C#
  "csharp.referencesCodeLens.enabled": false,

  // ## PHP
  "phpfmt.php_bin": "D:\\xampp\\php\\php.exe",
  "php.validate.executablePath": "D:\\xampp\\php\\php.exe",

  // ## Python
  "python.defaultInterpreterPath": "C:\\Program Files\\Python\\python.exe",
  "python.linting.pylintArgs": [
    "--disable=invalid-name",
    "--disable=line-too-long",
    "--disable=broad-except",
    "--disable=missing-docstring",
    "--disable=bad-whitespace",
    "--disable=unnecessary-semicolon",
    "--disable=consider-using-enumerate"
  ],
  "python.terminal.executeInFileDir": true,
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",

  // ## Javascript
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,

  // ##Typescript
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
},
  "[glsl]": {
    "editor.defaultFormatter": "circledev.glsl-canvas"
  },
  "jupyter.alwaysTrustNotebooks": true,
  "liveServer.settings.donotShowInfoMsg": true,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.validate": [
    "vue",
    "html",
    "json",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  "vetur.grammar.customBlocks": {
    "docs": "md",
    "i18n": "json",
    "preview-props": "json"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "[lua]": {
    "editor.defaultFormatter": "trixnz.vscode-lua"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "hardhat.telemetry": false,
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "redhat.telemetry.enabled": true,
  "remote.SSH.remotePlatform": {
    "172.16.17.220": "linux"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // --------------------------------- vim
  "vim.vimrc.enable": true,
  "vim.incsearch": true,
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(50, 135, 127, 0.9)",
  "vim.highlightedyank.duration": 1000,
  "vim.easymotion": true,
}
