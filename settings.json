{
    // EDITOR SETTING
    // Workbench
    "workbench.colorTheme"         : "Flatland Monokai",
    "workbench.iconTheme"          : "vscode-icons",
    "workbench.sideBar.location"   : "right",
    "workbench.colorCustomizations": {
        "editor.foreground"        : "#F5DEB3",
        "peekViewEditor.background": "#252620",
    },
    // Editor
    "editor.renderWhitespace"        : "all",
    "editor.minimap.enabled"         : true,
    "editor.formatOnSave"            : false,
    "editor.minimap.renderCharacters": false,
    "editor.lineHeight"              : 18,
    "editor.fontSize"                : 12,
    "editor.wordWrap"                : "on",
    "editor.parameterHints"          : true,
    "editor.tabSize"                 : 4,
    "editor.detectIndentation"       : false,
    "editor.snippetSuggestions"      : "top",
    "editor.quickSuggestions"        : {
        "other"   : true,
        "comments": true,
        "strings" : true
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope"   : "variable",
                "settings": {
                    "foreground": "#60D78B"
                }
            }
        ]
    },
    // Terminal
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // Explorer
    "explorer.confirmDelete"     : false,
    "explorer.confirmDragAndDrop": false,
    // Files
    "files.trimTrailingWhitespace": true,
    // Search
    "search.exclude": {
        "**/node_modules"    : true,
        "**/bower_components": true,
        "**/dist"            : true
    },
    // Disable Autoupdate
    "update.enableWindowsBackgroundUpdates"     : false,
    "update.channel"                            : "none",
    "extensions.ignoreRecommendations"          : true,
    "extensions.autoUpdate"                     : false,
    "extensions.autoCheckUpdates"               : false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "vsicons.dontShowNewVersionMessage"         : true,
    // Git
    "git.enableSmartCommit": true,
    "git.autofetch"        : true,
    "git.confirmSync"      : false,
    "files.exclude"        : {
        "**/.git"     : true,
        "**/.svn"     : true,
        "**/.hg"      : true,
        "**/CVS"      : true,
        "**/.DS_Store": true,
    },
    // EXTENSIONS SETTING
    // Fileheader
    "fileheader.Author"        : "Michael",
    "fileheader.LastModifiedBy": "Michael",
    "fileheader.tpl"           : "/*\r\n * @Author: {author} \r\n * @Date: {createTime} \r\n */\r\n",
    // SyncSetting
    "sync.gist"            : "85b86979f73ec410b16184fdaf91f72b",
    "sync.host"            : "",
    "sync.pathPrefix"      : "",
    "sync.quietSync"       : false,
    "sync.askGistName"     : false,
    "sync.removeExtensions": true,
    "sync.syncExtensions"  : true,
    "sync.autoDownload"    : false,
    "sync.autoUpload"      : false,
    "sync.lastUpload"      : "2018-08-04T15:28:00.062Z",
    "sync.lastDownload"    : "2018-08-16T06:49:16.522Z",
    "sync.forceDownload"   : false,
    // Eslint
    "eslint.autoFixOnSave": true,
    "eslint.validate"     : [
        "javascript",
        "javascriptreact",
        "html",
        "vue",
        {
            "language": "html",
            "autoFix" : true
        }
    ],
    // Markdownlint
    "markdown.preview.fontFamily": "Consolas, 'Courier New', monospace",
    "markdownlint.config"        : {
        "MD024": false,
    },
    // Betteralign
    "alignment.include": [
        "json",
        "js",
        "cs",
        "ts",
        "vue",
        "css",
        "scss",
        "shader",
        "sql"
    ],
    "alignment.surroundSpace": {
        "assignment": [
            1,
            1
        ],
    },
    // LANGUAGE SETTING
    // C#
    "csharp.referencesCodeLens.enabled": false,
    // PHP
    "phpfmt.php_bin"             : "D:\\xampp\\php\\php.exe",
    "php.validate.executablePath": "D:\\xampp\\php\\php.exe",
    // Python
    "python.pythonPath": "C:\\Users\\ETA\\AppData\\Local\\Programs\\Python\\Python36-32\\python.exe",
    // Javascript
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "javascript.format.placeOpenBraceOnNewLineForFunctions"    : true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis"   : true,
    // Typescript
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "typescript.format.placeOpenBraceOnNewLineForFunctions"    : true,
}